+@@ -184,6 +262,9 @@ int linux_br_del_if(int sock, const char
+ 	struct ifreq ifr;
+ 	int ifindex;
+ 
++	if (!ovs_br_del_if(brname, ifname))
++		return 0;
++
+ 	ifindex = if_nametoindex(ifname);
+ 	if (ifindex == 0)
+ 		return -1;
+@@ -206,6 +287,9 @@ int linux_br_get(char *brname, const cha
+ 	char path[128], brlink[128], *pos;
+ 	ssize_t res;
+ 
++	if (!ovs_br_get(brname, ifname))
