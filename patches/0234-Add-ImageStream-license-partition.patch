--- /dev/null
+++ build_dir.ap3500/target/linux/ramips/base-files/etc/hotplug.d/ieee80211/10_fix_wifi_mac
@@ -0,0 +1,47 @@
+#!/bin/ash
+
+[ "$ACTION" == "add" ] || exit 0
+
+PHYNBR=${DEVPATH##*/phy}
+
+[ -n $PHYNBR ] || exit 0
+
+. /lib/functions.sh
+. /lib/functions/system.sh
+. /usr/share/libubox/jshn.sh
+
+function process_macs() {
+	let i=0
+	while [ ! -z $1 ]; do
+		var="mac${i}"
+		eval $var=$1
+		shift
+		let i=i+1
+	done
+}
+
+function process_imagestream() {
+	mtd_dev=$(grep imagestream /proc/mtd | cut -d ':' -f 1)
+	json_load "$(dd if=/dev/$mtd_dev bs=1 skip=256)"
+	json_get_values _macs mac_addrs
+	process_macs $_macs
+}
+
+board=$(board_name)
+
+case "$board" in
+	mikrotik,rbm11g)
+		# Use our reserved MAC address instead of the card's MAC
+		process_imagestream
+		if [ "$PHYNBR" -eq 1 ]; then
+			if [ -n "$mac2" ]; then
+				echo $mac2 > /sys${DEVPATH}/macaddress
+			fi
+		elif [ "$PHYNBR" -eq 0 ] && [ -n "$mac3" ]; then
+			echo $mac3 > /sys${DEVPATH}/macaddress
+		fi
+		;;
+	*)
+		;;
+esac
+
