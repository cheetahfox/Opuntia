From a605b048e13b62edd1f555096f16bdef00211e00 Mon Sep 17 00:00:00 2001
From: syoder <syoder@imagestream.com>
Date: Fri, 16 Aug 2013 17:21:31 -0500
Subject: [PATCH] Rename images to Opuntia

---
 include/image.mk          | 2 +-
 scripts/arm-magic.sh      | 8 ++++----
 scripts/combined-image.sh | 2 +-
 3 files changed, 6 insertions(+), 6 deletions(-)

diff --git a/include/image.mk b/include/image.mk
index 09eda73..dac7d9f 100644
--- a/include/image.mk
+++ b/include/image.mk
@@ -15,7 +15,7 @@ override MAKEFLAGS=
 override MAKE:=$(SUBMAKE)
 KDIR=$(KERNEL_BUILD_DIR)
 
-IMG_PREFIX:=openwrt-$(BOARD)$(if $(SUBTARGET),-$(SUBTARGET))
+IMG_PREFIX:=opuntia-$(BOARD)$(if $(SUBTARGET),-$(SUBTARGET))
 
 ifneq ($(CONFIG_BIG_ENDIAN),)
   JFFS2OPTS     :=  --pad --big-endian --squash-uids -v
diff --git a/scripts/arm-magic.sh b/scripts/arm-magic.sh
index eff9b4d..ea742a6 100755
--- a/scripts/arm-magic.sh
+++ b/scripts/arm-magic.sh
@@ -28,15 +28,15 @@ do
   hexid=$(printf %x\\n $2)
   if [ "$2" -lt "256" ]; then
     # we have a low machtypeid, we just need a "mov" (e3a)
-    printf "\xe3\xa0\x10\x$hexid" > $BIN_DIR/openwrt-$1-zImage
+    printf "\xe3\xa0\x10\x$hexid" > $BIN_DIR/opuntia-$1-zImage
   else
     # we have a high machtypeid, we need a "mov" (e3a) and an "orr" (e38)
     if [ "$2" -lt "4096" ]; then
-      printf "\xe3\xa0\x10\x$(echo $hexid|cut -b "2 3")\xe3\x81\x1c\x$(echo $hexid|cut -b 1)" > $BIN_DIR/openwrt-$1-zImage
+      printf "\xe3\xa0\x10\x$(echo $hexid|cut -b "2 3")\xe3\x81\x1c\x$(echo $hexid|cut -b 1)" > $BIN_DIR/opuntia-$1-zImage
     else
-      printf "\xe3\xa0\x10\x$(echo $hexid|cut -b "3 4")\xe3\x81\x1c\x$(echo $hexid|cut -b "1 2")" > $BIN_DIR/openwrt-$1-zImage
+      printf "\xe3\xa0\x10\x$(echo $hexid|cut -b "3 4")\xe3\x81\x1c\x$(echo $hexid|cut -b "1 2")" > $BIN_DIR/opuntia-$1-zImage
     fi
   fi
     # generate the image
-    cat $BIN_DIR/$IMG_PREFIX-zImage >> $BIN_DIR/openwrt-$1-zImage
+    cat $BIN_DIR/$IMG_PREFIX-zImage >> $BIN_DIR/opuntia-$1-zImage
 done
diff --git a/scripts/combined-image.sh b/scripts/combined-image.sh
index 5472b2c..fbf01d8 100644
--- a/scripts/combined-image.sh
+++ b/scripts/combined-image.sh
@@ -7,7 +7,7 @@ BLKSZ=65536
 	exit 1
 }
 
-IMAGE=${3:-openwrt-combined.img}
+IMAGE=${3:-opuntia-combined.img}
 
 # Make sure provided images are 64k aligned.
 kern="${IMAGE}.kernel"
-- 
