Subject: [PATCH 06/14] Add license info to overview page. Change distro name
 to Opuntia

---
 .../modules/admin-full/luasrc/view/admin_status/index.htm           | 6 ++++++
 1 file changed, 6 insertions(+)

--- a/modules/admin-full/luasrc/view/admin_status/index.htm
+++ b/modules/admin-full/luasrc/view/admin_status/index.htm
@@ -561,12 +561,14 @@ You may obtain a copy of the License at
 
 	<table width="100%" cellspacing="10">
 		<tr><td width="33%"><%:Hostname%></td><td><%=luci.sys.hostname() or "?"%></td></tr>
-		<tr><td width="33%"><%:Model%></td><td><%=pcdata(model or "?")%></td></tr>
-		<tr><td width="33%"><%:Firmware Version%></td><td>
-			<%=pcdata(luci.version.distname)%> <%=pcdata(luci.version.distversion)%> /
-			<%=pcdata(luci.version.luciname)%> (<%=pcdata(luci.version.luciversion)%>)
+		<tr><td width="33%"><%:Product Information%></td><td>
+			Manufacturer:  <%=pcdata(luci.version.distmanufacturer)%><br/>
+			Product id:    <%=pcdata(luci.version.distproduct)%>, revision <%=pcdata(luci.version.disthwrev)%><br/>
 		</td></tr>
-		<tr><td width="33%"><%:Kernel Version%></td><td><%=luci.sys.exec("uname -r")%></td></tr>
+                <tr><td width="33%"><%:Firmware Version%></td><td>
+                        <%=pcdata(luci.version.distname)%> <%=pcdata(luci.version.distversion)%> <%=luci.sys.exec("grep REVISION /etc/opuntia_release | cut -d '\"' -f 2")%>
+                </td></tr>
+                <tr><td width="33%"><%:Kernel Version%></td><td><%=luci.sys.exec("uname -r")%></td></tr>
 		<tr><td width="33%"><%:Local Time%></td><td id="localtime">-</td></tr>
 		<tr><td width="33%"><%:Uptime%></td><td id="uptime">-</td></tr>
 		<tr><td width="33%"><%:Load Average%></td><td id="loadavg">-</td></tr>
--- a/build/mkversion.sh
+++ b/build/mkversion.sh
@@ -31,9 +31,15 @@ module "luci.version"
 if pcall(dofile, "/etc/openwrt_release") and _G.DISTRIB_DESCRIPTION then
 	distname    = ""
 	distversion = _G.DISTRIB_DESCRIPTION
+	distproduct = _G.DISTRIB_PRODUCT
+	distmanufacturer = _G.DISTRIB_MANUFACTURER
+	disthwrev = _G.DISTRIB_HWREV
 else
 	distname    = "${2:-OpenWrt}"
 	distversion = "${3:-Development Snapshot}"
+	distproduct = "Unknown"
+	distmanufacturer = "ISis ImageStream Internet Solutions"
+	disthwrev = "Unknown"
 end
 
 luciname    = "$variant"
