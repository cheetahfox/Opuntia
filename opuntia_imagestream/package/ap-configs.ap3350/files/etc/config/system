config system
	option hostname 'Opuntia'
	option timezone 'America/Chicago'
	option ttylogin '0'
	option log_size '64'
	option urandom_seed '0'

config timeserver 'ntp'
	option enabled '1'
	option enable_server '0'
	list server '0.openwrt.pool.ntp.org'
	list server '1.openwrt.pool.ntp.org'
	list server '2.openwrt.pool.ntp.org'
	list server '3.openwrt.pool.ntp.org'

config led 'status'
	option name 'status'
	option sysfs 'status'
	option default '1'
	option trigger 'heartbeat'

config rssid 'rssid_ath'
	option refresh '100000'
	option threshold '1'
	option dev 'wlan0'

config led 'led_sig1'
	option name 'SIG1'
	option sysfs 'rssi1'
	option trigger 'rssi'
	option iface 'rssid_ath'
	option minq '25'
	option maxq '100'
	option offset '0'
	option factor '1'

config led 'led_sig2'
	option name 'SIG2'
	option sysfs 'rssi2'
	option trigger 'rssi'
	option iface 'rssid_ath'
	option minq '50'
	option maxq '100'
	option offset '0'
	option factor '1'

config led 'led_sig3'
	option name 'SIG3'
	option sysfs 'rssi3'
	option trigger 'rssi'
	option iface 'rssid_ath'
	option minq '70'
	option maxq '100'
	option offset '0'
	option factor '1'

config led 'led_sig4'
	option name 'SIG4'
	option sysfs 'rssi4'
	option trigger 'rssi'
	option iface 'rssid_ath'
	option minq '80'
	option maxq '100'
	option offset '0'
	option factor '1'

config led 'led_sig5'
	option name 'SIG5'
	option sysfs 'rssi5'
	option trigger 'rssi'
	option iface 'rssid_ath'
	option minq '90'
	option maxq '100'
	option offset '0'
	option factor '1'
