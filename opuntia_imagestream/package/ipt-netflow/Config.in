# ipt-netflow advanced configuration

menu "Configuration"
	depends on PACKAGE_kmod-ipt-netflow

config IPT_NETFLOW_NATEVENTS
        bool "Enable support for netevents (NEL)"
        default y

config IPT_NETFLOW_SAMPLER
	bool "Enable flow sampler"
	default n

config IPT_NETFLOW_SNMP_AGENT
	bool "Enable support for the net-snmp agent module"
	default y

config IPT_NETFLOW_MACADDRESS
	bool "Enable exporting of src and dst MAC addresses for every flow. MAC addresses will be part of flow key."
	default n

config IPT_NETFLOW_VLAN
	bool "Enable exporting of dot1q VLAN IDs and Priorities for every flow"
	default n

config IPT_NETFLOW_DIRECTION
	bool "Enable exporting of flowDirection elements"
	default n

config IPT_NETFLOW_PHYSDEV
	bool "Export ingressPhysicalInterface and egressPhysicalInterface"
	default n

endmenu
