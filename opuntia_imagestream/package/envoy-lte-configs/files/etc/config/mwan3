config globals 'globals'
        option mmx_mask '0x3F00'
        option enabled '1'

config interface 'lte1'
	option enabled '1'
	list track_ip '8.8.4.4'
	list track_ip '8.8.8.8'
	option reliability '1'
	option count '1'
	option timeout '2'
	option interval '5'
	option down '3'
	option family 'ipv4'
	option size '56'
	option failure_interval '5'
	option recovery_interval '5'
	option up '2'
	option flush_conntrack 'never'

config interface 'lte2'
	option enabled '1'
	list track_ip '8.8.8.8'
	list track_ip '8.8.4.4'
	option reliability '1'
	option count '1'
	option timeout '2'
	option interval '5'
	option down '3'
	option family 'ipv4'
	option size '56'
	option failure_interval '5'
	option recovery_interval '5'
	option up '2'
	option flush_conntrack 'never'

config member 'lte1_m1_w3'
	option interface 'lte1'
	option metric '1'
	option weight '3'

config member 'lte1_m2_w3'
	option interface 'lte1'
	option metric '2'
	option weight '3'

config member 'lte2_m1_w3'
	option interface 'lte2'
	option metric '1'
	option weight '3'

config member 'lte2_m2_w3'
	option interface 'lte2'
	option metric '2'
	option weight '3'

config policy 'lte1_only'
	list use_member 'lte1_m1_w3'

config policy 'lte2_only'
	list use_member 'lte2_m1_w3'

config policy 'balanced'
	list use_member 'lte2_m1_w3'
	list use_member 'lte1_m1_w3'
	option last_resort 'default'

config policy 'lte1_lte2'
	list use_member 'lte1_m1_w3'
	list use_member 'lte2_m2_w3'

config policy 'lte2_lte1'
	list use_member 'lte1_m2_w3'
	list use_member 'lte2_m1_w3'

config rule 'default_rule'
	option dest_ip '0.0.0.0/0'
	option use_policy 'balanced'

