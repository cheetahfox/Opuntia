config system
	option hostname 'Opuntia'
	option timezone 'America/Chicago'
	option ttylogin '0'
	option log_size '64'
	option urandom_seed '0'

config timeserver 'ntp'
	option enabled '1'
	option enable_server '0'
	list server '0.openwrt.pool.ntp.org'
	list server '1.openwrt.pool.ntp.org'
	list server '2.openwrt.pool.ntp.org'
	list server '3.openwrt.pool.ntp.org'

config led 'eth0_txrx'
        option default '0'
        option name 'eth0'
        option sysfs 'poe:green:eth0'
        option trigger 'netdev'
        option dev 'eth0'
        option mode 'tx rx'

config led 'eth0_link'
        option default '0'
        option name 'eth0_link'
        option sysfs 'poe:yellow:eth0'
        option trigger 'netdev'
        option dev 'eth0'
        option mode 'link'

config led 'eth1_txrx'
        option default '0'
        option name 'eth1'
        option sysfs 'poe:green:eth1'
        option trigger 'netdev'
        option dev 'eth1'
        option mode 'tx rx'

config led 'eth1_link'
        option default '0'
        option name 'eth1_link'
        option sysfs 'poe:yellow:eth1'
        option trigger 'netdev'
        option dev 'eth1'
        option mode 'link'

config led 'power'
        option name 'power'
        option sysfs 'apu2:green:power'
        option default '1'
        option trigger 'heartbeat'

config led 'eth0'
        option default '0'
        option name 'eth0'
        option sysfs 'poe:green:led3'
        option trigger 'netdev'
        option dev 'eth0'
        option mode 'link tx rx'

config led 'eth1'
        option default '0'
        option name 'eth1'
        option sysfs 'poe:green:led4'
        option trigger 'netdev'
        option dev 'eth1'
        option mode 'link tx rx'

config led 'wlan0'
        option default '0'
        option name 'wlan0'
        option sysfs 'poe:green:led5'
        option trigger 'phy0tpt'

config led 'wlan1'
        option default '0'
        option name 'wlan1'
        option sysfs 'poe:green:led6'
        option trigger 'phy1tpt'

config led 'status_red'
        option name 'status'
        option sysfs 'poe:rgb:led2:red'
        option default '1'
        option trigger 'heartbeat'

config led 'status_green'
        option name 'status'
        option sysfs 'poe:rgb:led2:green'
        option default '1'
        option trigger 'heartbeat'

config led 'status_blue'
        option name 'status'
        option sysfs 'poe:rgb:led2:blue'
        option default '1'
        option trigger 'heartbeat'
