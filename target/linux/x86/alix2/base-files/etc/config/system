config system
	option hostname	Opuntia
	option timezone	UTC

config timeserver ntp
	list server	0.pool.ntp.org
	list server	1.pool.ntp.org
	list server	2.pool.ntp.org
	list server	3.pool.ntp.org

config led
	option default	0
	option name	Heartbeat
	option sysfs	'alix:1'
	option trigger	'heartbeat'

config led
	option default	1
	option name	WiFi
	option sysfs	'alix:2'
	option trigger	'phy0tpt'

config led
	option default	1
	option name	WWAN
	option sysfs	'alix:3'
	option trigger	netdev
	option mode	'tx rx'
	option dev	'wwan0'
