# This file is interpreted as shell script.
# Put your custom ip rules here, they will
# be executed with each call to the script
# /usr/lib/ipsec/_updown which by default
# strongswan executes.

case "$PLUTO_VERB:$1" in
up-client:iptables)
	  iptables -t nat -I POSTROUTING 1 -o $PLUTO_INTERFACE -p $PLUTO_PEER_PROTOCOL \
	      -s $PLUTO_MY_CLIENT $S_MY_PORT \
	      -d $PLUTO_PEER_CLIENT $D_PEER_PORT -j ACCEPT
	  conntrack -F -s $PLUTO_MY_CLIENT -d $PLUTO_PEER_CLIENT
	;;


down-client:iptables)
	  iptables -t nat -D POSTROUTING -o $PLUTO_INTERFACE -p $PLUTO_PEER_PROTOCOL \
	      -s $PLUTO_MY_CLIENT $S_MY_PORT \
	      -d $PLUTO_PEER_CLIENT $D_PEER_PORT \
	         -j ACCEPT
	  conntrack -F -s $PLUTO_MY_CLIENT -d $PLUTO_PEER_CLIENT
	;;
esac
